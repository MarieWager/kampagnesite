---
const {icon, img, apo, name, text} = Astro.props;
---

<section>
    <img src=`${img}` alt="Face" class="face_img"/>
    <div class="card">
        <h3>{name}</h3>
    <img src=`${apo}` alt="Apostrophe" class="apo_img"/>
    <p>{text}</p>
    <div class="rate"><img src=`${icon}` alt="Rate" class="thumb"/>
    <img src=`${icon}` alt="Rate" class="thumb"/>
    <img src=`${icon}` alt="Rate" class="thumb"/></div>
    </div>
</section>

<style>
    section{
        position: relative;

        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;

        border-radius: 0.5rem;
        padding: 1.5rem;
        padding-top: 4rem;
        background-color: white;

        box-shadow: 0 4px 10px rgba(0, 0, 0.4, 0.4); /*shadow*/
        margin-top: 3rem;

        height: 22rem;
        width: 18rem;
    }

   
    .face_img {
        position: absolute;
        top:-0.5rem;
        left: 50%;
        transform: translateX(-50%);

        height: 7rem;
        width: 7rem;
    }

    .apo_img {
        height: 4rem;
        width: 3rem;
        padding: 8px;
    }

    .thumb {
        height: 3rem;
        width: 3rem;
    }
    .rate {
        display: flex;
        gap: 0.7rem;
        justify-content: center;
        padding-top: 1rem;
    }
    
</style>