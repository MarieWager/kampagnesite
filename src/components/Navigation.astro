---
const { elem1, elem2, elem3, elem4, elem5 } = Astro.props;
---

<header id="header">
  <a class="button" target="_blank" href="https://www.misbrugsportalen.dk/bliv-frivillig.aspx">ANSÃ˜G</a>
  <a class="logo" href="https://www.misbrugsportalen.dk" class="grow">
    <img src="./logo.webp" alt="Logo" />
  </a>
  <nav class="nav">
    <ul class="menu">
      <li><a href=`#${elem1}` aria-label=`Go to ${elem1}`>{elem1}</a></li>
      <li><a href=`#${elem2}` aria-label=`Go to ${elem2}`>{elem2}</a></li>
      <li><a href=`#${elem3}` aria-label=`Go to ${elem3}`>{elem3}</a></li>
      <li><a href=`#${elem4}` aria-label=`Go to ${elem4}`>{elem4}</a></li>
      <li><a href=`#${elem5}` aria-label=`Go to ${elem5}`>{elem5}</a></li>
    </ul>
    <div class="burger" id="burger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </nav>
</header>

<style>
  .button {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    background-color: var(--dark-turquoise);
    border-radius: 65px;
    height: 55px;
    width: 55px;
    text-decoration: none;
    color: var(--light-grey);
    transition: 1s ease;
  }

  @media (min-width: 900px) {
    .button {
      display: none;
    }

    img {
      height: 80%;
      width: 80%;
    }
  }

  .button:hover {
    background-color: var(--orange);
    transition: 1s ease;
  }

  img {
    height: 80%;
  }

  /* Opacity-effekt */
  #header {
    transition: opacity 0.3s ease;
    opacity: 1;
  }

  #header.scrolled {
    opacity: 0.8;
    z-index: 3000;
  }

  #header:hover,
  #header:focus-within {
    opacity: 1;
    z-index: 3000;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const burger = document.getElementById("burger");
    const menu = document.querySelector(".menu");
    const header = document.getElementById("header");

    // Burger menu toggle
    if (burger && menu) {
      burger.addEventListener("click", () => {
        menu.classList.toggle("active");
        burger.classList.toggle("active");
      });
    }

    // Scroll opacity effect
    if (header) {
      window.addEventListener("scroll", () => {
        if (window.scrollY > 50) {
          header.classList.add("scrolled");
        } else {
          header.classList.remove("scrolled");
        }
      });
    }
  });
</script>
