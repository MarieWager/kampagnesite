---
import Button from "./Button.astro";
const {img,title,intro} = Astro.props;
---

<section>
    <img src=`${img}` alt="Image" class="puzzle_img">
    <div class="box">
        <h1>{title}</h1>
        <p>{intro}</p>
        <Button variant="dark" goto="https://www.misbrugsportalen.dk/bliv-frivillig.aspx" text="ANSÃ˜G HER" />
    </div>
</section>

<style>
    section {
        position: relative;
        color: var(--light-grey);
    }

    .box {
        top: 50%;
        position: absolute;
        background-color: var(--medium-turquoise);
        padding: 30px;
        margin: 20px;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    @media (min-width: 900px) {
        .box {
        top: 50%;
        position: absolute;
        padding: 80px;
        margin: 70px;
        }

        .puzzle_img {
            margin: 100px;
        }
    }       
</style>