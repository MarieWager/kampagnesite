<style>
    .citat {
        position: relative;
        background-color: var(--dark-turquoise);
        border-radius: 8px;
        padding: 80px 0;
        margin: 20px;
        margin-top: 190px;
        color: var(--light-grey);
    }
    .quotation {
        color: var(--turquoise);
        position: absolute;
